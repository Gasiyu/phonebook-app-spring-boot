<config xmlns="http://www.ehcache.org/v3">

  <!-- Cache template for entity caches -->
  <cache-template name="entityCacheDefaults">
    <key-type>java.util.UUID</key-type>
    <value-type>java.lang.Object</value-type>
    <expiry>
      <ttl unit="minutes">30</ttl>
    </expiry>
    <resources>
      <heap unit="entries">200</heap>
      <offheap unit="MB">10</offheap>
    </resources>
  </cache-template>

  <!-- Cache for employees -->
  <cache alias="employees" uses-template="entityCacheDefaults">
    <value-type>org.hyperskill.phonebook.model.Employee</value-type>
  </cache>

  <!-- Cache for users -->
  <cache alias="users" uses-template="entityCacheDefaults">
    <value-type>org.hyperskill.phonebook.model.User</value-type>
  </cache>

  <!-- Keep the original cachePhoneBook for backward compatibility -->
  <cache alias="cachePhoneBook">
    <key-type>java.lang.String</key-type>
    <value-type>java.lang.String</value-type>
    <resources>
      <heap unit="entries">20</heap>
      <offheap unit="MB">10</offheap>
    </resources>
  </cache>

</config>
